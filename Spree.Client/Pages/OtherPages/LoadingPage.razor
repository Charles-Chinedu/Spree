<div class="overlay"></div>
<div class="loading-wrapper fullscreen-fixed d-flex justify-context-center align-items-center">
    <div class="bg-white p-2 rounded shadow-lg">
        <div class="spinner-border text-secondary" role="status">
            <span class="visually-hidden"></span>
        </div>
        <label class="mb-0">@LoadingText</label>
    </div>
</div>

<style type="text/css">
    .fullscreen-fixed {
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        display: flex;
        justify-content: center;
        z-index: 2050;
    }

    .overlay {
        background: rgba(0, 0, 0, 0.5);
        position: fixed;
        left: 0;
        top: 0;
        right: 0;
        bottom: 0;
        z-index: 2049;
    }

    .loader-wrapper .bg-white{ 
        z-index: 2051;
    }

    .spinner-border {
        width: 1rem;
        height: 1rem;
    }
</style>

@code {
    [Parameter]
    public string? LoadingText { get; set; } = string.Empty;
}