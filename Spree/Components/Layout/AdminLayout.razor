@inherits LayoutComponentBase
@layout AdminNavBarSubLayout

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 bg-gray py-3" style="min-height: calc(100vh - 200px)">
            <AuthorizeView>
                <Authorized>
                    <h6 class="text-center font-weight-bold">Welcome @context.User.Identity!.Name</h6>
                </Authorized>
            </AuthorizeView>
            <hr />
            <div class="list-group">
                <NavLink href="admin/manage-categories" class="list-group-item list-group-item-action">Manage Categories</NavLink>
                <NavLink href="admin/manage-products" class="list-group-item list-group-item-action">Manage Products</NavLink>                
                <NavLink href="admin/manage-subscribers" class="list-group-item list-group-item-action">Manage Subscribers</NavLink>   
                <div class="list-group-item list-group-item-action">
                    <LogoutForm />
                </div>
            </div>
        </div>
        <div class="col-md-10">
            @Body
        </div>
    </div>
</div>

